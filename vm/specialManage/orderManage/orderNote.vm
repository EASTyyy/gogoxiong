<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	<meta http-equiv="pragma" Content="no-cache">
	<meta http-equiv="Cache-Control" Content="no-cache, must-revalidate,no-store">
	<meta http-equiv="Expires" Content="0">
	<link rel="stylesheet" type="text/css" href="/jquery-easyui/themes/default/easyui.css">
	<link rel="stylesheet" type="text/css" href="/jquery-easyui/themes/icon.css">
	<link rel="stylesheet" type="text/css" href="/jquery-easyui/demo/demo.css">
	<script type="text/javascript" src="/jquery-easyui/jquery-1.8.0.min.js"></script>
	<script type="text/javascript" src="/jquery-easyui/jquery.easyui.min.js"></script>
	<script type="text/javascript" src="/jquery-easyui/myself-easyui-tools.js"></script>
	<script type="text/javascript" src="/jquery-easyui/locale/easyui-lang-zh_CN.js"></script>
	<link rel="stylesheet" href="/kindeditor-4.1.7/themes/default/default.css" />
	<script charset="utf-8" src="/kindeditor-4.1.7/kindeditor-min.js"></script>
	<script charset="utf-8" src="/kindeditor-4.1.7/lang/zh_CN.js"></script>
	<style>
	#xlcl_order_note_window_form td{white-space:nowrap;}
	</style>
</head>
<body>	

<div id="xlcl_order_note_window">
    <form id="xlcl_order_note_window_form" method="post" enctype="multipart/form-data">
    	<input name="orderId" value="$!{order.id}"  class="easyui-textbox" type="hidden"/>
	    	<table class="xlcl_order_note_window_form_table">
				<tr>
					<td>备注：</td>
					<td><textarea style="width:200px;height:200px;break-all;overflow-y:visible;" class="easyui-validatebox" data-options="required:true" name="remark">$!{order.remark}</textarea></td>
				</tr>
	    	</table>
	   
    </form>
    <div style="text-align:center;">
		<a class="easyui-linkbutton" data-options="iconCls:'icon-save'" onclick="saveNote()">提交</a>
	</div>
</div>

<script>

function saveNote(){
	$.messager.progress();
	$('#xlcl_order_note_window_form').form('submit',{
		url:"/tjsc/order/saveRemark",
		onSubmit: function(){
			var isValid = $(this).form('validate');
			if (!isValid){
				$.messager.progress('close');	// 如果表单是无效的则隐藏进度条
			}
			return isValid;	// 返回false终止表单提交
		},
		success : function(data) {
			$.messager.progress('close');
			parent.$( '#$!{parentTableId}' ).datagrid('reload'); 
			parent.$( '#$!{parentDivId}' ).window('close');
		},
		error : function(resp){
			$.messager.progress('close');
			alert(resp)
		}
	});
}

</script>

</body>
</html>